<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item android:state_selected="true">
        <inset android:insetBottom="@dimen/dimen_6dp" android:insetLeft="@dimen/dimen_4dp" android:insetRight="@dimen/dimen_4dp" android:insetTop="@dimen/dimen_6dp">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dimen_2dp" />
                <solid android:color="@color/app_highlight" />
                <padding android:bottom="@dimen/dimen_4dp" android:left="@dimen/dimen_8dp" android:right="@dimen/dimen_8dp" android:top="@dimen/dimen_4dp" />
            </shape>
        </inset>
    </item>
    <item android:state_pressed="true">
        <inset android:insetBottom="@dimen/dimen_6dp" android:insetLeft="@dimen/dimen_4dp" android:insetRight="@dimen/dimen_4dp" android:insetTop="@dimen/dimen_6dp">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dimen_2dp" />
                <solid android:color="@color/app_highlight" />
                <padding android:bottom="@dimen/dimen_4dp" android:left="@dimen/dimen_8dp" android:right="@dimen/dimen_8dp" android:top="@dimen/dimen_4dp" />
            </shape>
        </inset>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</selector>